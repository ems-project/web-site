{% extends 'base.html.twig' %} 

{% block body %}

	<div class="row">
		<div class="col-md-6 hidden-xs hidden-sm">
			<img class="img-responsive" src="{{ asset('images/logo_homepage.png') }}" alt="{{ 'elasticms\'s logo' }}">
		</div>
		<div class="col-sm-12 hidden-md hidden-lg">
			<img class="img-responsive" src="{{ asset('images/logo_homepage_sm.png') }}" alt="{{ 'elasticms\'s logo' }}">
		</div>
		<div class="col-md-6">
			<h2>About elasticms</h2>
			<p>What if we could use elasticsearch as a database?</p>
			<p>Elasticms is "just" a backend allowing you to define content type and created/edit corresponding data. But each time that you'll saved 
			something it will be indexed in elasticsearch.</p>
			
			<a href="https://github.com/ems-project/elasticms" class="btn btn-primary"><i class="fa fa-github" aria-hidden="true"></i> {{ 'Fork us on GitHub'|trans }}</a>
		</div>
	</div>
	
	
	<!-- Marketing Icons Section -->
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">{{ 'Key features'|trans|raw }}</h1>
		</div>
		
		{% for feature in features['hits']['hits'] %}
			<div class="col-md-4">
				<div class="panel panel-default match-height">
					<div class="panel-heading">
						<h4>
							<i class="{{ feature._source.icon }}" aria-hidden="true"></i> 
							{{ attribute(feature._source, 'short_title_'~app.request.locale ) }}
						</h4>
					</div>
					<div class="panel-body">
						{{ attribute(feature._source, 'teaser_'~app.request.locale )|raw }}
						<a href="{{ path('data', {'type': 'feature', 'slug': feature._source.slug}) }}" class="btn btn-default">{{ 'Learn More'|trans }}<span class="sr-only"> {{ 'about %subject%'|trans({'%subject%': attribute(feature._source, 'short_title_'~app.request.locale )}) }}</span></a>
					</div>
				</div>
			</div>
		{% endfor %}

	</div>
	<!-- /.row -->
{% endblock %}

{% block javascripts %}
<<script type="text/javascript">
<!--
//-->

	$(function() {
		$('.match-height').matchHeight({});
	});
</script>

{% endblock %}
