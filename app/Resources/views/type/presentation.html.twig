<!doctype html>
<html lang="en">

	<head>
		<meta charset="utf-8">

		<title>{{ attribute(data, 'title_'~app.request.locale ) }}</title>

		<meta name="description" content="{{ attribute(data, 'teaser_'~app.request.locale ) }}">
		<meta name="author" content="{{ 'Mathieu De Keyzer' }}">

		<meta name="apple-mobile-web-app-capable" content="yes">
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">

		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

		<link rel="stylesheet" href="{{ asset('bower/reveal.js/css/reveal.css') }}">
		<link rel="stylesheet" href="{{ asset('bower/reveal.js/css/theme/black.css') }}" id="theme">

		<!-- Theme used for syntax highlighting of code -->
		<link rel="stylesheet" href="{{ asset('bower/reveal.js/lib/css/zenburn.css') }}">

		<!-- Printing and PDF exports -->
		<script>
			var link = document.createElement( 'link' );
			link.rel = 'stylesheet';
			link.type = 'text/css';
			link.href = window.location.search.match( /print-pdf/gi ) ? '{{ asset('bower/reveal.js/css/print/pdf.css') }}' : '{{ asset('bower/reveal.js/css/print/paper.css') }}';
			document.getElementsByTagName( 'head' )[0].appendChild( link );
		</script>

		<!--[if lt IE 9]>
		<script src="{{ asset('bower/reveal.js/lib/js/html5shiv.js') }}"></script>
		<![endif]-->
	</head>

	<body>

		<div class="reveal">

			<!-- Any section element inside of this container is displayed as a slide -->
			<div class="slides">
				{{ attribute(data, 'body_'~app.request.locale )|raw }}
			</div>

		</div>

		<script src="{{ asset('bower/reveal.js/lib/js/head.min.js') }}"></script>
		<script src="{{ asset('bower/reveal.js/js/reveal.js') }}"></script>

		<script>

			// More info https://github.com/hakimel/reveal.js#configuration
			Reveal.initialize({
				controls: true,
				progress: true,
				history: true,
				center: true,

				transition: 'slide', // none/fade/slide/convex/concave/zoom

				// More info https://github.com/hakimel/reveal.js#dependencies
				dependencies: [
					{ src: '{{ asset('bower/reveal.js/lib/js/classList.js') }}', condition: function() { return !document.body.classList; } },
					{ src: '{{ asset('bower/reveal.js/plugin/markdown/marked.js') }}', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
					{ src: '{{ asset('bower/reveal.js/plugin/markdown/markdown.js') }}', condition: function() { return !!document.querySelector( '[data-markdown]' ); } },
					{ src: '{{ asset('bower/reveal.js/plugin/highlight/highlight.js') }}', async: true, callback: function() { hljs.initHighlightingOnLoad(); } },
					{ src: '{{ asset('bower/reveal.js/plugin/zoom-js/zoom.js') }}', async: true },
					{ src: '{{ asset('bower/reveal.js/plugin/notes/notes.js') }}', async: true }
				]
			});

		</script>

	</body>
</html>
